<p id="notice"><%= notice %></p>

<h1>Transmissions</h1>

<form method="GET" action="/transmissions">
  Filtro: <input type="text" name="filter" />
  <input type="submit" />
</form>


<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Program number</th>
      <th>Person</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transmissions.each do |transmission| %>
      <tr>
        <% transmission.cloths.each do |cloth| %>
          <td><%= transmission.date %></td>
          <td><%= transmission.program_number %></td>
          <td><%= transmission.person.full_name %></td>
          <td><%= cloth.brand.name %></td>
          <td><%= cloth.cloth_type.name %></td>
          <td><%= cloth.description %></td>
          <td><%= cloth.brand.name %></td>
          <td><%= link_to 'Show', transmission %></td>
          <td><%= link_to 'Edit', edit_transmission_path(transmission) %></td>
          <td><%= link_to 'Destroy', transmission, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transmission', new_transmission_path %>
