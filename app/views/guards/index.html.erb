<p id="notice"><%= notice %></p>

<h1>Guards</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Appointment date</th>
      <th>Worker</th>
      <th>Medical center</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guards.each do |guard| %>
      <tr class="<%= guard_status(guard) %>">
        <td><%= guard.appointment_date %></td>
        <td><%= guard.guard_worker %></td>
        <td><%= guard.medical_center_id %></td>
        <td><%= link_to 'Show', guard %></td>
        <td><%= link_to 'Edit', edit_guard_path(guard) %></td>
        <td><%= link_to 'Destroy', guard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

